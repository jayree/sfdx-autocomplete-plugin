{
  "extends": "@salesforce/dev-config/tsconfig",
  "compilerOptions": {
    "outDir": "lib",
    "module": "ES2020",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo"
  },
  "ts-node": {
    "esm": true
  },
  "include": ["./src/**/*.ts"]
}
